= raw '<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&AMP;sensor=false"></script>'
=# javascript_include_tag 'https://lct.salesforce.com/sfga.js'
/
  %script
    __sfga()
:javascript
  function initialize() {
      // use http://www.findlatitudeandlongitude.com/ to find lat long
      var myLatlng = new google.maps.LatLng(18.53041, 73.851592);
      var mapOptions = {
          zoom: 15,
          center: myLatlng,
          mapTypeId: google.maps.MapTypeId.ROADMAP
      }
      var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
      var marker = new google.maps.Marker({
          position: myLatlng,
          map: map,
          title: 'Hello World!'
      });
  }
  google.maps.event.addDomListener(window, 'load', initialize);
