.container
  .row
    .col-lg-12
      - @testimonies.each do |testimony|
        .blog-item
          .row
            .col-lg-2.col-sm-2.text-right
              .author
                %a{:href => "#"} #{testimony[:endorser]}
              %ul.list-unstyled
                %li
                  %a{:href => "javascript:;"}
                    %em #{testimony[:title]}
                %li
                  %a{:href => "javascript:;"}
                    %em #{testimony[:company]}
            .col-lg-10.col-sm-10
              %blockquote
                %p #{raw testimony[:endorsement]} 
