.row.product-callouts
  .span
    .well.well-home-callout.first
      .top
      .center
        %h3
          Testimonials
        #testimonyCarousel.carousel.slide
          .carousel-inner
            - isFirst = true
            - @testimonies.each do |testimony|
              - if isFirst
                - isFirst = false
                .item.active
                  %p{:class => 'align-left'} 
                    #{truncate(testimony[:endorsement],:length=>325)}
                  %p.pull-right
                    #{testimony[:endorser]}
                    %br #{testimony[:title]}, #{testimony[:company]}
              - else
                .item
                  %p{:class => 'align-left'} 
                    #{truncate(testimony[:endorsement],:length=>325)}
                  %p.pull-right
                    #{testimony[:endorser]}
                    %br #{testimony[:title]}, #{testimony[:company]}

      
