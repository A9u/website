extends ./layouts/parallax-layout.jade

block content
  #skrollr-body
    section#bannerSlide.section-home.section-overlay.bg-props(style='background-image:url(./images/home-banner.jpg)', data-anchor-target='#bannerSlide')
      .container.overlay-container
        .overlay-content.-slide1.animated.fadeIn
          h1.display-4 INNOVATION <br>DISRUPTION
          h3 IS THE WAY WE CHANGE <br>THE GAME
          a.btn.btn-outline-danger.text-white(href="contact-us.html") Contact us
          p to change yours
        .overlay-content.-slide2
          h1 DISRUPT YOUR INDUSTRY
          p We partner with our clients to conceptualize and create sustainable web-based solutions, enabling high performance and growth in their businesses. We deliver business consultation to simplify technological complexities for better industry practices.
        a.scroll-down.text-white(href="javascript:void(0);", data-top="opacity: 0", data-bottom="opacity: 1")
          i.icon-angle-double-down

    section.section-spacer

    section#expertiseSlide.section-home.section-expertise.bg-props(style='background-image:url(./images/home-industries.jpg)', data-center='background-position: 50% 0px;', data-top-bottom='background-position: 50% -100px;', data-bottom-top='background-position: 50% 0px;', data-anchor-target='#expertiseSlide')
      .container
        h1.section-heading Domain Expertise
        .text-center
          img.img-fluid.img-expertise(src="./images/expertise.svg", alt="")
        .link-box.mb-4
          a.text-white(href="industries.html")
            i.align-middle.icon-arrow-right
            | View All Domains

    section.section-spacer

    section#workSlide.section-home.section-work.bg-props(style='background-color:#62AAAC', data-center='background-position: 50% 0px;', data-top-bottom='background-position: 50% -100px;', data-bottom-top='background-position: 50% 0px;', data-anchor-target='#workSlide')
      .container
        h1.section-heading What We Do?
        img.img-fluid.img-horizontal(src="./images/our-work.svg", alt="")
        img.img-fluid.img-vertical(src="./images/our-work-sm.svg", alt="")
        .link-box.mb-4
          a.text-white(href="services.html#ourWork")
            i.align-middle.icon-arrow-right
            | View Our Work

    section.section-spacer

    section#clientsSlide.section-home.section-clients.bg-props(style='background-color:#F4F4F4', data-center='background-position: 50% 0px;', data-top-bottom='background-position: 50% -100px;', data-bottom-top='background-position: 50% 0px;', data-anchor-target='#clientsSlide')
      .container
        h1.section-heading Our Top Clients
        ul.list-unstyled.list-client
          li
            a(href="javascript:void(0);")
              img.img-fluid(src="./images/clogo-star.jpg", alt="")
