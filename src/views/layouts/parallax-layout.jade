  body
    block header
      include ./../inc/header.jade

    block content
      h1 Identity

    block footer
      include ./../inc/footer-home.jade

    block scripts
      script(src='scripts/vendors.min.js')
      script(src='scripts/scripts.js')
      script.
        function scrollerInit() {
          $('#skrollr-body').ready(function() {
            skrollr.init({
              smoothScrolling: true,
              //- forceHeight: false,
              mobileCheck: function() {
                //hack - forces mobile version to be off
                //- return false;
              }
            });
          });
        }

        $(function () {

          scrollerInit();

          if(!(/Android|iPhone|iPad|iPod|BlackBerry|Windows Phone/i).test(navigator.userAgent || navigator.vendor || window.opera)){
            skrollr.init({
                forceHeight: false
            });
          }

          $(window).scroll(function() {
            var scroll = $(window).scrollTop();
            if (scroll >= 500) {
              $(".scroll-down").addClass("animated fadeOut");
            }
          });

          $('.-slide1.animated').addClass('fadeIn');

          document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
              e.preventDefault();
              document.querySelector(this.getAttribute('href')).scrollIntoView({
                behavior: 'smooth'
              });
            });
          });

          $.scrollify({
            section : ".section-home, .section-slide",
            //- sectionName : "section-name",
            //- sectionName : false,
            //- interstitialSection : ".section-contact, .josh-footer"
            offset : -76,
            setHeights: false,
          })
          
          function checkWidth() {
            var $window = $(window);
            var windowsize = $window.width();
            if (windowsize <= 991.98) {
              
              $.scrollify({
                offset : -54,
              });
              $.scrollify.disable();
            }
          }
          
          checkWidth();
          
          $(window).resize(checkWidth);

        });
