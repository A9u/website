doctype html
html(lang="en")
  block vars
   -var asset_url = "http://new.joshsoftware.com:8080/"
  
  head
    block head
      meta(charset="utf-8")
      meta(content="IE=edge", http-equiv="X-UA-Compatible")
      meta(content="width=device-width, initial-scale=1, user-scalable=0", name="viewport")
      meta(content='Ruby on Rails, RoR, India, Rails development, React, ReactJS, Go, GoLang, Android, iOS, Mobile Development, Kotlin, Flutter, Swift, Machine Learning, AI, Artificial Intelligience, Cloud open source, Web application development', name='keywords')
      meta(content='Technology Solution Providers To Disrupt Your Industry', name='description')
      // Favicons
      link(rel='apple-touch-icon-precomposed', href='apple-touch-icon-precomposed.png')
      link(rel='icon', href='favicon.ico')
      title #{title} | Josh Software Private Limited
      link(rel='stylesheet', href="styles/main.min.css")
      link(href='https://fonts.googleapis.com/css?family=Lato:100,300,400,700', rel='stylesheet')
      script(src='https://www.google.com/recaptcha/api.js', async='', defer='')
      //[if lt IE 9]> <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script> <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script> <![endif]
  body
    block header
      include ./../inc/header.jade

    block content
      h1 Identity

    block footer
      include ./../inc/footer.jade

    block scripts
      script(src='scripts/vendors.min.js')
      script(src='scripts/scripts.js')
      script.
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function (e) {
            e.preventDefault();
            document.querySelector(this.getAttribute('href')).scrollIntoView({
              behavior: 'smooth', 
              block: 'start', 
              inline: 'start'
            });
          });
        });
